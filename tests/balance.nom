deposit = function(v):
	self.balance = self.balance + v
end


withdraw = function(v):
	if self.balance < v:
		print("Insufficient funds\n")
		return 0
	end
	self.balance = self.balance - v
end

show = function():
	print("Name: ", self.name, " Balance: ", self.balance, " \n")
end

new_acc = function(name, m):
	acc.name = name
	acc.balance = m
	acc.deposit = deposit
	acc.withdraw = withdraw
	acc.show = show
	return acc
end

a[0] = new_acc("john", 100)
a[1] = new_acc("mike", 1000)
a[2] = new_acc("bill", 10000)

