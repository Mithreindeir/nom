#Bubble Sort
bubble_sort = function(arr, comp):
	arr_size = size(arr)
	for j=0, j < arr_size, j++:
		for i = 0, i < (arr_size-1), i++:
			if not comp(arr[i], arr[i+1]):
				tmp = arr[i+1]
				arr[i+1]=arr[i]
				arr[i]=tmp
			end
		end
	end
end

merge_sort = function(arr, comp):
	s=size(arr)
	if s>1:
		mid = floor(s/2)
		a=array()
		for i=0, i < mid, i++:
			a[i]=arr[i]
		end
		b=array()
		for i=mid, i < s, i++:
			b[i-mid]=arr[i]
		end
		merge_sort(a, comp)
		merge_sort(b, comp)
		i=0
		j=0
		k=0
		ls = size(a)
		rs = size(b)
		while (i<ls) and (j<rs):
			if comp(a[i], b[j]):
				arr[k]=a[i]
				i++
			end
			else:
				arr[k]=b[j]
				j++
			end
			k++
		end
		while i < ls:
			arr[k]=a[i]
			i++
			k++
		end
		while j < rs:
			arr[k]=b[j]
			j++
			k++
		end
	end
end

fh=open("test.txt", "r")
