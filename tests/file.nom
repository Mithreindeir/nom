#Returns a substring given a start and end
range = function(str1, low, high):
	expr = string()
	s = high-low
	expr = reserve(expr, s)
	for i=low, i<high, i++:
		expr[i-low] = str1[i]
	end
	return expr
end

#Alphabetical comparison function
alphabetical = function(str1, str2):
	low1 = size(str1)
	low2 = size(str2)
	low = low2
	if low1 < low2:
		low=low1
	end
	for i=0,i<low,i++:
		if str1[i] < str2[i]:
			return 1
		end
		elseif str1[i] > str2[i]:
			return 0
		end
	end
	return 0
end

